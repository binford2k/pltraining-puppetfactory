# Builds a basic ubuntu container built on phusion/basimage with pe-agent installed.
# This image is for training purposes and is not intended for production environments.
FROM phusion/baseimage
MAINTAINER Josh Samuelson <js@puppetlabs.com>
ENV HOME /root/
ENV TERM xterm
RUN apt-get update
RUN apt-get --assume-yes install ruby
RUN gem install multipart-post -v 1.2.0
RUN gem install r10k
RUN echo 'if ! hash puppet; then curl -k https://<%= @fqdn %>:8140/packages/current/install.bash | sudo bash; fi' >> /root/.bashrc
